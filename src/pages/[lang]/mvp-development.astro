---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/shared/Header.tsx';
import Footer from '../../components/shared/Footer.tsx';
import { useTranslations, defaultLanguage, generateLanguagePaths } from '../../i18n/config';

// Define all possible language routes at build time
export function getStaticPaths() {
  return generateLanguagePaths().filter(({ params }) => params.lang !== 'pl');
}

// Get language from params
const { lang = defaultLanguage } = Astro.params;
const t = useTranslations(lang);

// Advanced SEO - Structured data for MVP development page
const jsonLd = {
  "@context": "https://schema.org",
  "@type": ["Service", "Organization"],
  "name": "MVP Development in 7 Days - Coderno",
  "description": "Build MVP in 7 days with Coderno. Comprehensive MVP development services, prototyping, 24h estimate. Test your business idea quickly and affordably.",
  "provider": {
    "@type": "Organization",
    "name": "Coderno",
    "url": "https://coderno.pl",
    "logo": "https://coderno.pl/logo.png",
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "+48-XXX-XXX-XXX",
      "contactType": "customer service",
      "areaServed": "Worldwide",
      "availableLanguage": ["pl", "en"]
    }
  },
  "areaServed": {
    "@type": "Place",
    "name": "Worldwide"
  },
  "serviceType": "MVP Development",
  "category": ["MVP", "Startup", "Prototyping", "Software Development"],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "MVP Development Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "MVP Web App",
          "description": "Complete web application MVP ready in 7 days"
        },
        "price": "3750",
        "priceCurrency": "USD",
        "priceValidUntil": "2024-12-31"
      },
      {
        "@type": "Offer", 
        "itemOffered": {
          "@type": "Service",
          "name": "MVP Mobile App",
          "description": "Mobile app MVP with essential features"
        },
        "price": "8000",
        "priceCurrency": "USD",
        "priceValidUntil": "2024-12-31"
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service", 
          "name": "MVP Platform",
          "description": "Full platform MVP with admin panel"
        },
        "price": "12500",
        "priceCurrency": "USD",
        "priceValidUntil": "2024-12-31"
      }
    ]
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.9",
    "reviewCount": "73"
  }
};

// FAQ Schema for better SEO
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How much does MVP development cost?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "MVP cost depends on project complexity. Simple web apps from $3,750, mobile apps from $8,000, full platforms from $12,500. You'll receive a quote within 24 hours."
      }
    },
    {
      "@type": "Question", 
      "name": "How quickly can I launch an MVP project?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "We build standard MVPs in 7 business days. After quote approval, we start work the next business day. Simple prototypes can be launched in 3-5 days."
      }
    },
    {
      "@type": "Question",
      "name": "What's included in MVP development package?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "MVP package includes: requirements analysis, UI/UX design, frontend and backend programming, server deployment, basic testing, user manual, and 30 days technical support."
      }
    },
    {
      "@type": "Question",
      "name": "Can I scale MVP after launch?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, we design MVPs with future scalability in mind. We use modern technologies allowing easy feature additions and performance improvements."
      }
    }
  ]
};

// Enhanced SEO meta tags for English version
const pageTitle = "MVP Development in 7 Days - Start Fast | 24h Quote | Coderno";
const pageDescription = "✅ Build MVP in 7 days ⚡ 24h quote ⚡ From $3,750 ⚡ Test idea quickly ⚡ Start project tomorrow ☎️ Contact today";
const pageKeywords = "MVP development worldwide, build MVP 7 days, MVP quote 24h, start MVP project, MVP development, startup development, prototyping, build MVP, fast MVP, MVP in week";
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  lang={lang}
  jsonLd={[jsonLd, faqSchema]}
  canonical={`https://coderno.pl${lang === 'pl' ? '' : '/' + lang}/mvp-development`}
  ogImage="/og-mvp-development-en.jpg"
>
  <Header client:load lang={lang} />
  
  <!-- Main content with JetBrains WebStorm inspired design -->
  <main class="min-h-screen bg-black relative overflow-hidden">
    
    <!-- Large organic gradient shapes - JetBrains style -->
    <div class="absolute inset-0">
      <!-- Main large blob - blue to yellow gradient like WebStorm -->
      <div class="absolute top-0 right-0 w-[60%] h-full">
        <div class="absolute top-1/4 right-0 w-[500px] h-[400px] bg-gradient-to-br from-blue-500 via-cyan-400 to-yellow-400 rounded-full blur-3xl opacity-60 animate-pulse"></div>
        <div class="absolute bottom-1/4 right-1/4 w-[350px] h-[350px] bg-gradient-to-br from-green-400 via-emerald-400 to-teal-400 rounded-full blur-3xl opacity-40 animate-pulse animation-delay-2s"></div>
        <div class="absolute top-1/2 right-1/3 w-[200px] h-[200px] bg-gradient-to-br from-purple-400 to-pink-400 rounded-full blur-2xl opacity-30 animate-pulse animation-delay-4s"></div>
      </div>
      
      <!-- Small accent elements -->
      <div class="absolute top-1/3 right-20 w-2 h-2 bg-white rounded-full opacity-60"></div>
      <div class="absolute bottom-1/3 right-32 w-1 h-1 bg-cyan-400 rounded-full opacity-80"></div>
    </div>

    <!-- Hero Section -->
    <div class="relative z-10 min-h-screen flex items-center">
      <div class="container mx-auto px-8 md:px-16 max-w-7xl">
        <div class="max-w-2xl">
          
          <!-- Badge like WebStorm -->
          <div class="inline-flex items-center gap-2 bg-gray-800 border border-gray-700 rounded-full px-4 py-2 mb-8">
            <span class="text-emerald-400 text-sm font-medium">Coderno</span>
            <span class="text-gray-400 text-sm">MVP in 7 days</span>
          </div>
          
          <!-- Main heading -->
          <h1 class="text-5xl md:text-7xl lg:text-8xl font-light text-white mb-8 leading-tight">
            <span class="text-white">Build your</span>
            <span class="text-emerald-400 font-normal">MVP</span>
          </h1>
          
          <!-- Subtitle -->
          <p class="text-xl md:text-2xl text-gray-400 mb-12 font-light leading-relaxed">
            Create and test your business idea in just 7 days.
            <br />
            24-hour quote, project start tomorrow.
          </p>
          
          <!-- CTA Button - simple like WebStorm -->
          <div class="flex gap-4">
            <a 
              href="#quote" 
              class="bg-emerald-600 hover:bg-emerald-700 text-white px-8 py-4 rounded-lg font-medium transition-all duration-300 text-lg"
            >
              Start Project
            </a>
          </div>
          
        </div>
      </div>
    </div>

    <!-- Stats section -->
    <section class="relative z-10 py-20 border-t border-gray-800">
      <div class="container mx-auto px-8 md:px-16 max-w-7xl">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="text-3xl font-light text-emerald-400 mb-2">7</div>
            <div class="text-gray-400 text-sm">days to MVP</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-light text-emerald-400 mb-2">24h</div>
            <div class="text-gray-400 text-sm">quote</div>
          </div>
                     <div class="text-center">
             <div class="text-3xl font-light text-emerald-400 mb-2">$3.7k+</div>
             <div class="text-gray-400 text-sm">from USD</div>
           </div>
          <div class="text-center">
            <div class="text-3xl font-light text-emerald-400 mb-2">73</div>
            <div class="text-gray-400 text-sm">projects</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Services section -->
    <section id="services" class="relative z-10 py-20 border-t border-gray-800">
      <div class="container mx-auto px-8 md:px-16 max-w-7xl">
        <h2 class="text-4xl md:text-5xl font-light text-white mb-16">Our MVP Packages</h2>
        
        <div class="grid md:grid-cols-3 gap-8">
                     <div class="bg-gray-900/50 border border-gray-800 rounded-lg p-8 hover:border-emerald-500/50 transition-all duration-300">
             <h3 class="text-2xl font-light text-white mb-4">MVP Web App</h3>
             <div class="text-3xl font-light text-emerald-400 mb-4">$3,750</div>
             <p class="text-gray-400 mb-6">Complete web application MVP ready in 7 days</p>
            <ul class="text-gray-400 space-y-2 text-sm">
              <li>• Requirements analysis</li>
              <li>• UI/UX design</li>
              <li>• Frontend + Backend</li>
              <li>• Deployment</li>
              <li>• 30 days support</li>
            </ul>
          </div>
          
                     <div class="bg-gray-900/50 border border-gray-800 rounded-lg p-8 hover:border-emerald-500/50 transition-all duration-300">
             <h3 class="text-2xl font-light text-white mb-4">MVP Mobile App</h3>
             <div class="text-3xl font-light text-emerald-400 mb-4">$8,000</div>
             <p class="text-gray-400 mb-6">Mobile app MVP with essential features</p>
            <ul class="text-gray-400 space-y-2 text-sm">
              <li>• React Native</li>
              <li>• iOS + Android</li>
              <li>• API Backend</li>
              <li>• Store deployment</li>
              <li>• 30 days support</li>
            </ul>
          </div>
          
                     <div class="bg-gray-900/50 border border-gray-800 rounded-lg p-8 hover:border-emerald-500/50 transition-all duration-300">
             <h3 class="text-2xl font-light text-white mb-4">MVP Platform</h3>
             <div class="text-3xl font-light text-emerald-400 mb-4">$12,500</div>
             <p class="text-gray-400 mb-6">Full platform MVP with admin panel</p>
            <ul class="text-gray-400 space-y-2 text-sm">
              <li>• Web + Mobile</li>
              <li>• Admin panel</li>
              <li>• Advanced API</li>
              <li>• Scalable architecture</li>
              <li>• 30 days support</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="relative z-10 py-20 border-t border-gray-800">
      <div class="container mx-auto px-8 md:px-16 max-w-7xl">
        <h2 class="text-4xl md:text-5xl font-light text-white mb-16">Frequently Asked Questions</h2>
        
        <div class="space-y-8 max-w-4xl">
                     <div class="bg-gray-900/30 border border-gray-800 rounded-lg p-6">
             <h3 class="text-xl font-medium text-white mb-3">How much does MVP development cost?</h3>
             <p class="text-gray-400">MVP cost depends on project complexity. Simple web apps from $3,750, mobile apps from $8,000, full platforms from $12,500. You'll receive a quote within 24 hours.</p>
           </div>
          
          <div class="bg-gray-900/30 border border-gray-800 rounded-lg p-6">
            <h3 class="text-xl font-medium text-white mb-3">How quickly can I launch an MVP project?</h3>
            <p class="text-gray-400">We build standard MVPs in 7 business days. After quote approval, we start work the next business day. Simple prototypes can be launched in 3-5 days.</p>
          </div>
          
          <div class="bg-gray-900/30 border border-gray-800 rounded-lg p-6">
            <h3 class="text-xl font-medium text-white mb-3">What's included in MVP development package?</h3>
            <p class="text-gray-400">MVP package includes: requirements analysis, UI/UX design, frontend and backend programming, server deployment, basic testing, user manual, and 30 days technical support.</p>
          </div>
          
          <div class="bg-gray-900/30 border border-gray-800 rounded-lg p-6">
            <h3 class="text-xl font-medium text-white mb-3">Can I scale MVP after launch?</h3>
            <p class="text-gray-400">Yes, we design MVPs with future scalability in mind. We use modern technologies allowing easy feature additions and performance improvements.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact CTA -->
    <section id="quote" class="relative z-10 py-20 border-t border-gray-800">
      <div class="container mx-auto px-8 md:px-16 max-w-7xl text-center">
        <h2 class="text-4xl md:text-5xl font-light text-white mb-8">Ready to start?</h2>
        <p class="text-xl text-gray-400 mb-12 max-w-2xl mx-auto">
          Contact us today and receive your MVP quote within 24 hours.
        </p>
        <a 
          href="mailto:hello@coderno.pl"
          class="bg-emerald-600 hover:bg-emerald-700 text-white px-8 py-4 rounded-lg font-medium transition-all duration-300 text-lg inline-block"
        >
          Contact Us
        </a>
      </div>
    </section>

  </main>
  
  <Footer client:load lang={lang} />
</Layout>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
  
  .animation-delay-2s {
    animation-delay: 2s;
  }
  
  .animation-delay-4s {
    animation-delay: 4s;
  }
</style> 