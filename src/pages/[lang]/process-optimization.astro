---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/shared/Header.tsx';
import Footer from '../../components/shared/Footer.tsx';
import { useTranslations, defaultLanguage, generateLanguagePaths } from '../../i18n/config';

// Define all possible language routes at build time
export function getStaticPaths() {
  return generateLanguagePaths().filter(({ params }) => params.lang !== 'pl');
}

// Get language from params
const { lang = defaultLanguage } = Astro.params;
const t = useTranslations(lang);

// Structured data for process optimization page
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Process Optimization & Business Improvement",
  "description": t('optimization.seo.description'),
  "provider": {
    "@type": "Organization",
    "name": "Coderno"
  },
  "areaServed": lang === 'pl' ? "PL" : "Worldwide",
  "serviceOutput": lang === 'pl' ? "Zoptymalizowane procesy biznesowe" : "Optimized business processes",
  "offers": {
    "@type": "Offer",
    "description": lang === 'pl' ? "Usprawnienie proces√≥w organizacyjnych" : "Organizational process improvement",
    "price": lang === 'pl' ? "Od 8000 PLN" : "From $2000",
    "priceCurrency": lang === 'pl' ? "PLN" : "USD"
  }
};

const pageTitle = t('optimization.seo.title');
const pageDescription = t('optimization.seo.description');
const pageKeywords = t('optimization.seo.keywords');
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  lang={lang}
  jsonLd={jsonLd}
  canonical={`https://coderno.pl${lang === 'pl' ? '' : '/' + lang}/process-optimization`}
>
  <Header client:load lang={lang} />
  <main class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900">
    <!-- Hero Section -->
    <section class="relative pt-20 pb-16 px-4">
      <div class="container mx-auto max-w-6xl">
        <div class="text-center mb-16">
          <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 leading-tight">
            <span class="bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">
              {t('optimization.hero.title')}
            </span>
            <br />
            {t('optimization.hero.subtitle')}
          </h1>
          <p class="text-xl md:text-2xl text-gray-300 max-w-4xl mx-auto mb-8">
            We streamline your organization with proven methodologies. 
            <strong class="text-purple-400">{t('optimization.hero.cost_reduction')}</strong> and 
            <strong class="text-pink-400">{t('optimization.hero.speed_increase')}</strong>.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="#audit" class="bg-purple-600 hover:bg-purple-700 text-white px-8 py-4 rounded-lg font-semibold transition-colors text-lg">
              {t('optimization.hero.cta_primary')}
            </a>
            <a href="#methods" class="border border-purple-400 text-purple-400 hover:bg-purple-400 hover:text-white px-8 py-4 rounded-lg font-semibold transition-colors text-lg">
              {t('optimization.hero.cta_secondary')}
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Current Problems -->
    <section class="py-16 px-4">
      <div class="container mx-auto max-w-6xl">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-white mb-4">
            Are these problems slowing down your business?
          </h2>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8 mb-16">
          <div class="bg-slate-800 p-8 rounded-xl">
            <h3 class="text-2xl font-bold text-red-400 mb-4">‚ö†Ô∏è Common Issues</h3>
