---
import Layout from '../layouts/Layout.astro';
import Header from '../components/shared/Header.tsx';
import Footer from '../components/shared/Footer.tsx';

// Advanced SEO - Structured data dla strony MVP development
const jsonLd = {
  "@context": "https://schema.org",
  "@type": ["Service", "Organization"],
  "name": "Rozwój MVP w 7 Dni - Coderno",
  "description": "Buduj MVP w 7 dni z Coderno. Kompleksowe usługi rozwoju MVP, prototypowania, wycena w 24h. Sprawdź swój pomysł biznesowy szybko i tanio.",
  "provider": {
    "@type": "Organization",
    "name": "Coderno",
    "url": "https://coderno.pl",
    "logo": "https://coderno.pl/logo.png",
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "+48-XXX-XXX-XXX",
      "contactType": "customer service",
      "areaServed": "PL",
      "availableLanguage": ["pl", "en"]
    }
  },
  "areaServed": {
    "@type": "Country",
    "name": "Polska"
  },
  "serviceType": "MVP Development",
  "category": ["MVP", "Startup", "Prototyping", "Software Development"],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Usługi MVP Development",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "MVP Web App",
          "description": "Kompleksowa aplikacja webowa MVP gotowa w 7 dni"
        },
        "price": "15000",
        "priceCurrency": "PLN",
        "priceValidUntil": "2024-12-31"
      },
      {
        "@type": "Offer", 
        "itemOffered": {
          "@type": "Service",
          "name": "MVP Mobile App",
          "description": "Aplikacja mobilna MVP z podstawowymi funkcjami"
        },
        "price": "32000",
        "priceCurrency": "PLN",
        "priceValidUntil": "2024-12-31"
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service", 
          "name": "MVP Platform",
          "description": "Pełna platforma MVP z panelem administratora"
        },
        "price": "50000",
        "priceCurrency": "PLN",
        "priceValidUntil": "2024-12-31"
      }
    ]
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.9",
    "reviewCount": "73"
  }
};

// FAQ Schema for better SEO
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Ile kosztuje budowa MVP?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Koszt MVP zależy od złożoności projektu. Proste aplikacje webowe od 15,000 PLN, aplikacje mobilne od 32,000 PLN, pełne platformy od 50,000 PLN. Wycenę otrzymasz w ciągu 24 godzin."
      }
    },
    {
      "@type": "Question", 
      "name": "Jak szybko mogę uruchomić projekt MVP?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Standardowe MVP budujemy w 7 dni roboczych. Po akceptacji wyceny rozpoczynamy pracę następnego dnia roboczego. Proste prototypy można uruchomić nawet w 3-5 dni."
      }
    },
    {
      "@type": "Question",
      "name": "Co zawiera MVP development package?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Package MVP zawiera: analizę wymagań, design UI/UX, programowanie frontend i backend, deployment na serwerze, podstawowe testy, instrukcję obsługi oraz 30 dni wsparcia technicznego."
      }
    },
    {
      "@type": "Question",
      "name": "Czy mogę skalować MVP po uruchomieniu?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Tak, MVP projektujemy z myślą o przyszłej skalowalności. Używamy nowoczesnych technologii pozwalających na łatwe dodawanie funkcji i zwiększanie wydajności."
      }
    }
  ]
};

// Enhanced SEO meta tags
const pageTitle = "MVP Development w 7 Dni - Start Szybko | Wycena MVP 24h | Coderno";
const pageDescription = "✅ Buduj MVP w 7 dni ⚡ Wycena w 24h ⚡ Od 15,000 PLN ⚡ Sprawdź pomysł szybko ⚡ Start projektu jutro ☎️ Zadzwoń już dziś";
const pageKeywords = "MVP development Polska, buduj MVP 7 dni, wycena MVP 24h, start MVP project, rozwój MVP, startup development, prototyping, build MVP, szybkie MVP, MVP w tygodniu";

// Open Graph and Twitter meta
const ogTitle = "MVP Development w 7 Dni - Buduj Szybko i Tanio | Coderno";
const ogDescription = "Rozwijamy MVP w 7 dni. Wycena w 24h, od 8,000 PLN. Sprawdź swój pomysł biznesowy szybko i tanio.";
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  lang="pl"
  jsonLd={[jsonLd, faqSchema]}
  canonical="https://coderno.pl/mvp-development"
  ogImage="/og-mvp-development.jpg"
>
  <Header client:load lang="pl" />
  
  <!-- Main content with modern dark theme design -->
  <main class="min-h-screen bg-black relative overflow-hidden">
    
    <!-- Large organic gradient shapes -->
    <div class="absolute inset-0">
      <!-- Main large blob - blue to yellow gradient -->
      <div class="absolute top-0 right-0 w-[60%] h-full">
        <div class="absolute top-1/4 right-0 w-[500px] h-[400px] bg-gradient-to-br from-blue-500 via-cyan-400 to-yellow-400 rounded-full blur-3xl opacity-60 animate-pulse"></div>
        <div class="absolute bottom-1/4 right-1/4 w-[350px] h-[350px] bg-gradient-to-br from-green-400 via-emerald-400 to-teal-400 rounded-full blur-3xl opacity-40 animate-pulse animation-delay-2s"></div>
        <div class="absolute top-1/2 right-1/3 w-[200px] h-[200px] bg-gradient-to-br from-purple-400 to-pink-400 rounded-full blur-2xl opacity-30 animate-pulse animation-delay-4s"></div>
      </div>
      
      <!-- Small accent elements -->
      <div class="absolute top-1/3 right-20 w-2 h-2 bg-white rounded-full opacity-60"></div>
      <div class="absolute bottom-1/3 right-32 w-1 h-1 bg-cyan-400 rounded-full opacity-80"></div>
    </div>

    <!-- Hero Section -->
    <div class="relative z-10 min-h-screen flex items-center">
      <div class="container mx-auto px-8 md:px-16 max-w-7xl">
        <div class="max-w-2xl">
          
          <!-- Brand badge -->
          <div class="inline-flex items-center gap-2 bg-gray-800 border border-gray-700 rounded-full px-4 py-2 mb-8">
            <span class="text-emerald-400 text-sm font-medium">Coderno</span>
            <span class="text-gray-400 text-sm">MVP w 7 dni</span>
          </div>
          
          <!-- Main heading -->
          <h1 class="text-5xl md:text-7xl lg:text-8xl font-light text-white mb-8 leading-tight">
            <span class="text-white">Buduj</span>
            <span class="text-white font-light">swoje</span>
            <span class="text-emerald-400 font-normal"> MVP</span>
          </h1>
          
          <!-- Subtitle -->
          <p class="text-xl md:text-2xl text-gray-400 mb-12 font-light leading-relaxed">
            Stwórz i przetestuj swój pomysł biznesowy w zaledwie 7 dni.
            <br />
            Wycena w 24 godziny, start projektu jutro.
          </p>
          
          <!-- CTA Button -->
          <div class="flex gap-4">
            <a 
              href="#wycena" 
              class="bg-emerald-600 hover:bg-emerald-700 text-white px-8 py-4 rounded-lg font-medium transition-all duration-300 text-lg"
            >
              Rozpocznij Projekt
            </a>
          </div>
          
        </div>
      </div>
    </div>

    <!-- Stats section -->
    <section class="relative z-10 py-20 border-t border-gray-800">
      <div class="container mx-auto px-8 md:px-16 max-w-7xl">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="text-3xl font-light text-emerald-400 mb-2">7</div>
            <div class="text-gray-400 text-sm">dni do MVP</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-light text-emerald-400 mb-2">24h</div>
            <div class="text-gray-400 text-sm">wycena</div>
          </div>
                     <div class="text-center">
             <div class="text-3xl font-light text-emerald-400 mb-2">15k+</div>
             <div class="text-gray-400 text-sm">od PLN</div>
           </div>
          <div class="text-center">
            <div class="text-3xl font-light text-emerald-400 mb-2">73</div>
            <div class="text-gray-400 text-sm">projektów</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Services section -->
    <section id="services" class="relative z-10 py-20 border-t border-gray-800">
      <div class="container mx-auto px-8 md:px-16 max-w-7xl">
        <h2 class="text-4xl md:text-5xl font-light text-white mb-16">Nasze Pakiety MVP</h2>
        
        <div class="grid md:grid-cols-3 gap-8">
                     <div class="bg-gray-900/50 border border-gray-800 rounded-lg p-8 hover:border-emerald-500/50 transition-all duration-300">
             <h3 class="text-2xl font-light text-white mb-4">MVP Web App</h3>
             <div class="text-3xl font-light text-emerald-400 mb-4">15,000 PLN</div>
             <p class="text-gray-400 mb-6">Kompleksowa aplikacja webowa MVP gotowa w 7 dni</p>
            <ul class="text-gray-400 space-y-2 text-sm">
              <li>• Analiza wymagań</li>
              <li>• Design UI/UX</li>
              <li>• Frontend + Backend</li>
              <li>• Deployment</li>
              <li>• 30 dni wsparcia</li>
            </ul>
          </div>
          
                     <div class="bg-gray-900/50 border border-gray-800 rounded-lg p-8 hover:border-emerald-500/50 transition-all duration-300">
             <h3 class="text-2xl font-light text-white mb-4">MVP Mobile App</h3>
             <div class="text-3xl font-light text-emerald-400 mb-4">32,000 PLN</div>
             <p class="text-gray-400 mb-6">Aplikacja mobilna MVP z podstawowymi funkcjami</p>
            <ul class="text-gray-400 space-y-2 text-sm">
              <li>• React Native</li>
              <li>• iOS + Android</li>
              <li>• API Backend</li>
              <li>• Store deployment</li>
              <li>• 30 dni wsparcia</li>
            </ul>
          </div>
          
                     <div class="bg-gray-900/50 border border-gray-800 rounded-lg p-8 hover:border-emerald-500/50 transition-all duration-300">
             <h3 class="text-2xl font-light text-white mb-4">MVP Platform</h3>
             <div class="text-3xl font-light text-emerald-400 mb-4">50,000 PLN</div>
             <p class="text-gray-400 mb-6">Pełna platforma MVP z panelem administratora</p>
            <ul class="text-gray-400 space-y-2 text-sm">
              <li>• Web + Mobile</li>
              <li>• Panel admina</li>
              <li>• Zaawansowane API</li>
              <li>• Skalowalna architektura</li>
              <li>• 30 dni wsparcia</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="relative z-10 py-20 border-t border-gray-800">
      <div class="container mx-auto px-8 md:px-16 max-w-7xl">
        <h2 class="text-4xl md:text-5xl font-light text-white mb-16">Często Zadawane Pytania</h2>
        
        <div class="space-y-8 max-w-4xl">
                     <div class="bg-gray-900/30 border border-gray-800 rounded-lg p-6">
             <h3 class="text-xl font-medium text-white mb-3">Ile kosztuje budowa MVP?</h3>
             <p class="text-gray-400">Koszt MVP zależy od złożoności projektu. Proste aplikacje webowe od 15,000 PLN, aplikacje mobilne od 32,000 PLN, pełne platformy od 50,000 PLN. Wycenę otrzymasz w ciągu 24 godzin.</p>
           </div>
          
          <div class="bg-gray-900/30 border border-gray-800 rounded-lg p-6">
            <h3 class="text-xl font-medium text-white mb-3">Jak szybko mogę uruchomić projekt MVP?</h3>
            <p class="text-gray-400">Standardowe MVP budujemy w 7 dni roboczych. Po akceptacji wyceny rozpoczynamy pracę następnego dnia roboczego. Proste prototypy można uruchomić nawet w 3-5 dni.</p>
          </div>
          
          <div class="bg-gray-900/30 border border-gray-800 rounded-lg p-6">
            <h3 class="text-xl font-medium text-white mb-3">Co zawiera MVP development package?</h3>
            <p class="text-gray-400">Package MVP zawiera: analizę wymagań, design UI/UX, programowanie frontend i backend, deployment na serwerze, podstawowe testy, instrukcję obsługi oraz 30 dni wsparcia technicznego.</p>
          </div>
          
          <div class="bg-gray-900/30 border border-gray-800 rounded-lg p-6">
            <h3 class="text-xl font-medium text-white mb-3">Czy mogę skalować MVP po uruchomieniu?</h3>
            <p class="text-gray-400">Tak, MVP projektujemy z myślą o przyszłej skalowalności. Używamy nowoczesnych technologii pozwalających na łatwe dodawanie funkcji i zwiększanie wydajności.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact CTA -->
    <section id="wycena" class="relative z-10 py-20 border-t border-gray-800">
      <div class="container mx-auto px-8 md:px-16 max-w-7xl text-center">
        <h2 class="text-4xl md:text-5xl font-light text-white mb-8">Gotowy na start?</h2>
        <p class="text-xl text-gray-400 mb-12 max-w-2xl mx-auto">
          Skontaktuj się z nami już dziś i otrzymaj wycenę MVP w ciągu 24 godzin.
        </p>
        <a 
          href="mailto:hello@coderno.pl"
          class="bg-emerald-600 hover:bg-emerald-700 text-white px-8 py-4 rounded-lg font-medium transition-all duration-300 text-lg inline-block"
        >
          Skontaktuj się z nami
        </a>
      </div>
    </section>

  </main>
  
  <Footer client:load lang="pl" />
</Layout>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
  
  .animation-delay-2s {
    animation-delay: 2s;
  }
  
  .animation-delay-4s {
    animation-delay: 4s;
  }
</style> 