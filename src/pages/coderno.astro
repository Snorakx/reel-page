---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';
import StorySection from '../components/StorySection.astro';

// Własne teksty dla hero section
const headlines = [
  "Masz pomysł, ale nie wiesz od czego zacząć?",
  "Masz problem, który zjada Twój czas i pieniądze?",
  "Potrzebujesz wsparcia doświadczonego zespołu?"
];

const bulletPoints = [
  "Potrzebujesz MVP, ale nikt nie robi tego szybciej niż w 3 miesiące?",
  "Masz aplikację, która ledwo zipie i nikt jej nie chce dotykać?",
  "Masz produkt, ale brakuje Ci feature'a, który przekona inwestorów?"
];
---

<Layout title="Coderno - Twój partner w rozwoju oprogramowania" lang="pl">
  <!-- Hero Section -->
  <HeroSection
    headlines={headlines}
    bulletPoints={bulletPoints}
    scrollCueText="Odkryj więcej"
    logoText="CODERNO"
  />
  
  <!-- Process Storytelling Section -->
  <StorySection />
</Layout>

<style>
  /* Dodatkowe style dla strony Coderno */
  :root {
    --coderno-blue: #1976D2;
    --coderno-dark: #0B0F1A;
  }
</style> 