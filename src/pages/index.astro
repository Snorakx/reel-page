        </a>
        <div class="w-px h-12 bg-white mx-auto opacity-50"></div>
        <span class="text-xs font-bold transform -rotate-90 whitespace-nowrap tracking-[2px]">FOLLOW</span>
      </div>
    </div>

    <!-- Reel Indicators -->
    <div class="fixed left-6 top-1/2 transform -translate-y-1/2 z-40 space-y-3">
      <div class="reel-indicator active w-2 h-8 bg-white rounded-full transition-all duration-300" data-reel="0"></div>
      <div class="reel-indicator w-2 h-8 bg-white/30 rounded-full transition-all duration-300" data-reel="1"></div>
      <div class="reel-indicator w-2 h-8 bg-white/30 rounded-full transition-all duration-300" data-reel="2"></div>
      <div class="reel-indicator w-2 h-8 bg-white/30 rounded-full transition-all duration-300" data-reel="3"></div>
    </div>
  </main>

  <script>
    // Reels functionality
    let currentReel = 0;
    const totalReels = 4;
    let isScrolling = false;

    function scrollToSection(index: number) {
      if (isScrolling) return;
      
      isScrolling = true;
      currentReel = Math.max(0, Math.min(index, totalReels - 1));
      
      const targetElement = document.querySelector(`.reel-${currentReel + 1}`) as HTMLElement;
      if (targetElement) {
        targetElement.scrollIntoView({ behavior: 'smooth' });
        updateIndicators();
        
        setTimeout(() => {
          isScrolling = false;
        }, 1000);
      }
    }

         function updateIndicators() {
       document.querySelectorAll('.reel-indicator').forEach((indicator, index) => {
         const indicatorElement = indicator as HTMLElement;
         if (index === currentReel) {
           indicatorElement.classList.add('active');
           indicatorElement.classList.remove('bg-white/30');
           indicatorElement.classList.add('bg-white');
         } else {
           indicatorElement.classList.remove('active');
           indicatorElement.classList.remove('bg-white');
           indicatorElement.classList.add('bg-white/30');
         }
       });
       
       // Show/hide footer based on current reel
       const footer = document.querySelector('footer') as HTMLElement;
       if (footer) {
         if (currentReel === totalReels - 1) {
           footer.style.display = 'block';
         } else {
           footer.style.display = 'none';
         }
       }
     }

    // Wheel scroll handling
    document.addEventListener('wheel', (e: WheelEvent) => {
      e.preventDefault();
      
      if (isScrolling) return;
      
      if (e.deltaY > 0 && currentReel < totalReels - 1) {
        scrollToSection(currentReel + 1);
      } else if (e.deltaY < 0 && currentReel > 0) {
        scrollToSection(currentReel - 1);
      }
    }, { passive: false });

    // Touch handling for mobile
    let touchStartY = 0;
    document.addEventListener('touchstart', (e: TouchEvent) => {
      touchStartY = e.touches[0].clientY;
    });

    document.addEventListener('touchend', (e: TouchEvent) => {
      const touchEndY = e.changedTouches[0].clientY;
      const diff = touchStartY - touchEndY;
      
      if (Math.abs(diff) > 50) {
        if (diff > 0 && currentReel < totalReels - 1) {
          scrollToSection(currentReel + 1);
        } else if (diff < 0 && currentReel > 0) {
          scrollToSection(currentReel - 1);
        }
      }
    });

    // Keyboard navigation
    document.addEventListener('keydown', (e: KeyboardEvent) => {
      if (e.key === 'ArrowDown' && currentReel < totalReels - 1) {
        scrollToSection(currentReel + 1);
      } else if (e.key === 'ArrowUp' && currentReel > 0) {
        scrollToSection(currentReel - 1);
      }
    });

    // Indicator clicks
    document.querySelectorAll('.reel-indicator').forEach((indicator, index) => {
      indicator.addEventListener('click', () => {
        scrollToSection(index);
      });
    });

         // Initialize
     document.addEventListener('DOMContentLoaded', () => {
       updateIndicators();
       
       // Hide footer initially
       const footer = document.querySelector('footer') as HTMLElement;
       if (footer) {
         footer.style.display = 'none';
       }
     });

    // Make scrollToSection available globally for nav buttons
    (window as any).scrollToSection = scrollToSection;
  </script>
</Layout>

<style>
  /* Reels Container */
  .reels-container {
    height: 100vh;
    overflow: hidden;
    position: relative;
  }

  .reel {
    height: 100vh;
    width: 100%;
    position: relative;
    scroll-snap-align: start;
  }

  /* Typography */
  .text-gradient {
    background: linear-gradient(45deg, #00ffff, #0080ff, #8000ff);
    background-size: 300% 300%;
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    animation: gradient-shift 4s ease-in-out infinite;
  }

  /* Animations */
  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(60px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(180deg); }
  }

  @keyframes scroll-dot {
    0% { transform: translateY(0); opacity: 1; }
    100% { transform: translateY(12px); opacity: 0; }
  }

  @keyframes progress {
    from { width: 0%; }
    to { width: 100%; }
  }

  @keyframes pulse-glow {
    0%, 100% { 
      text-shadow: 0 0 20px rgba(0, 255, 255, 0.5);
    }
    50% { 
      text-shadow: 0 0 30px rgba(0, 255, 255, 0.8), 0 0 40px rgba(0, 255, 255, 0.3);
    }
  }

  /* Animation Classes */
  .animate-slide-up {
    animation: slide-up 0.8s ease-out forwards;
    opacity: 0;
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out forwards;
    opacity: 0;
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-scroll-dot {
    animation: scroll-dot 2s ease-in-out infinite;
  }

  .animate-progress {
    animation: progress 3s ease-out infinite;
  }

  .animate-pulse-glow {
    animation: pulse-glow 2s ease-in-out infinite;
  }

  /* Delays */
  .delay-100 { animation-delay: 0.1s; }
  .delay-200 { animation-delay: 0.2s; }
  .delay-300 { animation-delay: 0.3s; }
  .delay-400 { animation-delay: 0.4s; }
  .delay-500 { animation-delay: 0.5s; }
  .delay-600 { animation-delay: 0.6s; }
  .delay-700 { animation-delay: 0.7s; }
  .delay-1000 { animation-delay: 1s; }
  .delay-2000 { animation-delay: 2s; }
  .delay-3000 { animation-delay: 3s; }

  /* Service Cards */
  .service-card {
    padding: 2rem;
    border-radius: 0;
    transition: all 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  /* Social Links */
  .social-link {
    transition: all 0.3s ease;
  }

  .social-link:hover {
    transform: scale(1.2);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .text-7xl { font-size: 4rem; }
    .text-8xl { font-size: 5rem; }
    .text-9xl { font-size: 6rem; }
  }

  /* Disable scroll on body */
  body {
    overflow: hidden;
  }
</style>
